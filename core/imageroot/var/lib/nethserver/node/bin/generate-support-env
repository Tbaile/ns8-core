import agent
import sys
import os
import uuid
import subprocess

BASE_URL = "http://ns8.nethserver.org/support/"

rdb = agent.redis_connect(use_replica=True)
cluster_uuid = rdb.get("cluster/uuid")

vpn_password = os.getenv("SUPPORT_VPN_PASSWORD", str(uuid.uuid5(uuid.NAMESPACE_URL, BASE_URL + str(uuid.uuid4()))))
cert_file = os.getenv("SUPPORT_VPN_CERT_FILE", os.environ["AGENT_INSTALL_DIR"] + '/etc/support/openvpn.pem')

openssl_argv = "openssl x509 -noout -subject -in ".split() + [cert_file]
cert_cn = os.getenv("SUPPORT_VPN_CERT_COMMON_NAME", subprocess.check_output(openssl_argv, check=True, text=True))

support_env = {
    "VPN_PEER_HOST": os.getenv("SUPPORT_VPN_PEER_HOST", "sos.nethesis.it"),
    "VPN_PEER_PORT": os.getenv("SUPPORT_VPN_PEER_PORT", "1194"),
    "VPN_USERNAME": os.getenv("SUPPORT_VPN_USERNAME", cluster_uuid)
    "VPN_PASSWORD": vpn_password,
    "VPN_CERT_FILE": cert_file,
    "VPN_CERT_COMMON_NAME": cert_cn,
    "VPN_INACTIVE": os.getenv("SUPPORT_VPN_INACTIVE", "604800"), # default is one week
}

agent.write_envfile("support.env", support_env)
agent.run_helper("cp", "-v", "-f", cert_file, "support.pem")
